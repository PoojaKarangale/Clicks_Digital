<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".SetProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fitsSystemWindows="true"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toTopOf="@+id/main_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/done_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/done_right_click" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_img"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:src="@drawable/residential"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="4dp"

            />

        <!--
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginTop="-48dp"
            android:src="@drawable/residential"
             />
             -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:shadowColor="@color/grey"
            android:shadowDx="2"
            android:shadowDy="2"
            android:text="change profile photo"
            android:textColor="@color/pale_grey"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="profile photo is mandatory to continue"
            android:textColor="@color/pale_grey"
            android:textSize="10dp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.AppBarLayout>
    <!--
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">
        -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:fillViewport="true"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_collapseMode="parallax"
        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="Full name"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp"

                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="Email id"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="Male"
                        android:textColor="@color/grey" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:onClick="onRadioButtonClicked"
                        android:text="Female"
                        android:textColor="@color/grey" />


                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/weblink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="LinkedIn link"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="Bio"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <!--
            <Button
                android:id="@+id/verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_back_stroke_red"
                android:text="NEXT"
                />
                -->
            <!--          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                >
-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="What are you working on" />

            <EditText
                android:id="@+id/working"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_edit_text"
                android:padding="5dp"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Add your Experiences" />
            <EditText
                android:id="@+id/experiences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_edit_text"
                android:hint=""
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Speaker at any event" />

            <EditText
                android:id="@+id/speaker_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/back_edit_text"
                android:hint=""
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Add your expectations from platform if any" />

            <EditText
                android:id="@+id/expectations_from_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/back_edit_text"
                android:hint=""
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="What can you offer to the community" />

            <EditText
                android:id="@+id/offer_to_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_edit_text"
                android:hint=""
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <!--       <Button
                           android:id="@+id/btn_cerification_upload"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentEnd="true"
                           android:layout_alignParentRight="true"
                           android:text="done"
                           android:background="?android:attr/windowBackground"
                           />
                           -->
                <TextView
                    android:id="@+id/cerifications_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Add Ceritifications"
                    android:textColor="@color/pale_grey"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_cerification_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/windowBackground"
                    android:text="Choose" />

                <EditText
                    android:id="@+id/cerifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/cerifications_text"
                    android:background="@drawable/back_edit_text"
                    android:hint="Add name for your file"
                    android:padding="5dp"
                    android:textColor="@color/grey"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/set_cetificate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/cerifications"
                    android:textColor="@color/purple"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_edit_text"
                android:padding="5dp"
                android:text="You can add social media links"
                android:textColor="@color/pale_grey"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/home" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/home" />
            </LinearLayout>

            <EditText
                android:id="@+id/facebook_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="paste facebook link here"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/insta_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="paste instagram link here"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/twiter_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_edit_text"
                android:hint="paste twiter link here"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />


            <!--
                <Button
                    android:id="@+id/verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_back_stroke_red"
                    android:text="NEXT"
                    />
                    -->
            <!--
            </LinearLayout>
            -->
        </TableLayout>
    </ScrollView>
    <!--
    </androidx.cardview.widget.CardView>
    -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>