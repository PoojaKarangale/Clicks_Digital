<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F0FD"
    android:id="@+id/main_on_board">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="247dp"
      android:layout_marginTop="110dp"
      android:orientation="vertical">
    <ImageView
        android:id="@+id/on_board_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="256dp"
      android:orientation="vertical"
      android:layout_alignParentBottom="true"
      android:background="@drawable/on_boarding_footer"

      >
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/on_board_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="73dp"
        android:layout_marginLeft="73dp"
        android:fontFamily="@font/helvetica_bold"
        android:textColor="#FFFFFF"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/on_board_subtitle"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="34dp"
        android:fontFamily="@font/segoe"
        android:textColor="#E8F0FD"/>
  </LinearLayout>

</RelativeLayout>