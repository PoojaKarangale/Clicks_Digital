<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Event.CreateEventActivity">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/event_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/event_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:background="@drawable/bg_rounded_white"
        android:elevation="20dp"
        android:shadowColor="@color/transperent_grey"
        android:text="Add Image"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/event_image"
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margine_main"
            android:layout_marginTop="@dimen/margine_sub"
            android:layout_marginEnd="@dimen/margine_main"
            android:layout_marginBottom="@dimen/margine_main">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:textSize="@dimen/title1"
                android:fontFamily="@font/lato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="40"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="top|left"
                android:hint="Event Description"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical"
                android:textColorHint="@color/black"
                android:textSize="@dimen/title1"
                android:fontFamily="@font/lato"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true"
                tools:layout_editor_absoluteX="16dp"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Event Category"
                android:textSize="@dimen/title1"
                android:fontFamily="@font/lato"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_name" />

            <Spinner
                android:id="@+id/event_cat_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <!--   <com.rengwuxian.materialedittext.MaterialEditText
                   android:id="@+id/new_cat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="Event Category"
                   android:text="enter new Category"
                   android:textCursorDrawable="@drawable/text_cursor_cyan"
                   android:textSize="12sp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@+id/textView4"
                   app:met_baseColor="@android:color/white"
                   app:met_floatingLabel="highlight"
                   app:met_maxCharacters="40"
                   app:met_primaryColor="?colorAccent"
                   app:met_singleLineEllipsis="true" />
   -->
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/description"
                tools:layout_editor_absoluteX="16dp">

                <TextView
                    android:id="@+id/event_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event type"
                    android:textSize="@dimen/title2"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/colorPrimary" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_type_text"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/onlineChip"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textSize="@dimen/title1"
                        android:fontFamily="@font/lato"
                        app:chipBackgroundColor="@color/chipColor" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/offlineChip"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline"
                        android:fontFamily="@font/lato"
                        android:textSize="@dimen/title1"
                        app:chipBackgroundColor="@color/chipColor"
                        app:layout_constraintStart_toEndOf="@+id/onlineChip"
                        app:layout_constraintTop_toBottomOf="@+id/get_duration"
                        app:layout_constraintTop_toTopOf="@+id/onlineChip" />

                </com.google.android.material.chip.ChipGroup>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/get_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chip_group"
                    android:hint="Location"
                    android:textSize="@dimen/title1"
                    android:fontFamily="@font/lato"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="20"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <ImageButton
                    android:id="@+id/choose_date"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/calender" />

                <TextView
                    android:id="@+id/choose_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/title2"
                    android:hint="12/02/2020" />
            </LinearLayout>

            <!--  <EditText
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/back_round_button"
                  android:hint="Choose  Date"
                  android:textSize="16dp"
                  app:layout_constraintStart_toStartOf="@+id/set_date"
                  app:layout_constraintTop_toBottomOf="@+id/set_date"
                  />
              -->
            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dateLayout"
                app:layout_constraintTop_toTopOf="@+id/dateLayout">

                <ImageButton
                    android:id="@+id/choose_time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/choose_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/title2"
                    android:hint="12.00" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/get_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="time Duration"
                android:textSize="@dimen/title2"
                android:fontFamily="@font/lato"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateLayout"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight" />

            <TextView
                android:id="@+id/event_payable_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="Event payable"
                android:textSize="@dimen/title2"
                android:fontFamily="@font/lato"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/get_duration" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_payble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_payable_text">

                <com.google.android.material.chip.Chip
                    android:id="@+id/paidChip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid"
                    android:textSize="@dimen/title1"
                    android:fontFamily="@font/lato"
                    app:chipBackgroundColor="@color/chipColor" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/unpaidChip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unpaid"
                    android:textSize="@dimen/title1"
                    android:fontFamily="@font/lato"
                    app:chipBackgroundColor="@color/chipColor"
                    app:layout_constraintStart_toEndOf="@+id/onlineChip"
                    app:layout_constraintTop_toBottomOf="@+id/get_duration"
                    app:layout_constraintTop_toTopOf="@+id/onlineChip" />

            </com.google.android.material.chip.ChipGroup>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/get_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:enabled="false"
                android:hint="Cost of event"
                android:textSize="@dimen/title2"
                app:layout_constraintStart_toEndOf="@+id/chip_group_payble"
                app:layout_constraintTop_toTopOf="@+id/chip_group_payble"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/get_cost">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_grey_border"
                    android:backgroundTint="@color/white"
                    android:text="Cancel"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/get_cost" />

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/back_round_button"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Create Event"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cancel_btn" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>