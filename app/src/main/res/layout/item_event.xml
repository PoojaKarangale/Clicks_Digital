<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="@dimen/margine_sub"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="@dimen/margine_sub"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"

    app:cardCornerRadius="15dp">

  <LinearLayout
      android:id="@+id/card_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/pale_grey"
      android:orientation="horizontal"
      android:padding="12dp">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:src="@drawable/residential" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margine_sub"
        android:orientation="vertical">

      <TextView
          android:id="@+id/event_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:capitalize="characters"
          android:fontFamily="@font/helvetica_bold"
          android:gravity="start|top"
          android:maxLines="2"
          android:text="WORKSHOP TO BECOME AN INFLUENCER"
          android:textColor="#092759"
          android:textSize="@dimen/fourteen"
          />

      <View
          android:id="@+id/hor_line"
          android:layout_width="wrap_content"
          android:layout_height="2dp"

          android:background="#092859" />

      <TextView
          android:id="@+id/time_date_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/segoe"
          android:text="date and time and time duration"
          android:textColor="#212121"
          android:textSize="9dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/eventDetailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe"
            android:maxLines="3"
            android:text="Event Details : "
            android:textColor="#212121"
            android:textSize="11dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/eventDetails"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:capitalize="sentences"
              android:ellipsize="end"
              android:fontFamily="@font/segoe"
              android:maxLines="3"
              android:text="The text you're putting in the TextView is short, it will not automatically expand to four lines. If you want the TextView to always have four lines regardless of the length of the text in it, set the android:lines attribute:"
              android:textAlignment="gravity"
              android:textColor="@color/white"
              android:textSize="11dp" />

        </RelativeLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/venueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Venue : "
            android:textColor="#212121"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:maxLines="2"
            android:text="Foodcourt, Phonix Mall, Nagar Road, Pune"
            android:textColor="@color/white"
            android:textSize="11dp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start|bottom"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/organisertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organiser : "
            android:textColor="#212121"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/organiser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="name of organiser"
            android:textColor="@color/white"
            android:textSize="11dp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start|bottom"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Fee : "
            android:textColor="#212121"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/event_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Free"
            android:textColor="@color/white"
            android:textSize="11dp" />

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

  <Button
      android:id="@+id/bookBtn"
      android:layout_width="51dp"
      android:layout_height="20dp"
      android:layout_gravity="bottom|end"
      android:layout_marginEnd="@dimen/margine_sub"
      android:layout_marginBottom="@dimen/margine_sub"
      android:background="@drawable/cb_rectangle_round"
      android:backgroundTint="#092859"
      android:gravity="center"
      android:text="Book Now"
      android:textColor="@color/white"
      android:textSize="8sp" />

  <Button
      android:id="@+id/editBtn"
      android:layout_width="51dp"
      android:layout_height="20dp"
      android:layout_gravity="bottom|end"
      android:layout_marginEnd="@dimen/margine_sub"
      android:layout_marginBottom="@dimen/margine_sub"
      android:background="@drawable/cb_rectangle_round"
      android:backgroundTint="#092859"
      android:gravity="center"
      android:text="Edit"
      android:textColor="@color/white"
      android:textSize="8sp"
      android:visibility="gone" />

</androidx.cardview.widget.CardView>