<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/set_profile_blue">
    <ImageView
        android:id="@+id/image_in_internet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/internet_image"/>
    <TextView
        android:id="@+id/internet_text"
        android:layout_marginTop="20dp"
        android:layout_below="@id/image_in_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Internet Connection"
        android:textStyle="bold"
        android:fontFamily="@font/helvetica_bold"
        android:textColor="#212121"
        android:textSize="@dimen/dimen_16dp"
        android:gravity="center_horizontal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/internet_text"
        android:layout_centerHorizontal="true"
        android:text="Refresh"
        android:layout_marginTop="16dp"
        android:background="@drawable/set_profile_red"/>

</RelativeLayout>