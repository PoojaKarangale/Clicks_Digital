<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/HeaderDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/rec_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/receiver_messages_layout_two"
        android:focusableInTouchMode="true"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="11dp"
        android:paddingBottom="11dp">

        <TextView
            android:id="@+id/receiver_message_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/segoe"
            android:text="1:30 PM-May 1, 2020"
            android:textColor="#8BB4F3"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/segoe"
            android:text="name"
            android:textColor="#8BB4F3"
            android:textSize="@dimen/fourteen" />

        <LinearLayout
            android:id="@+id/reply_main_receiver"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/receiver_messages_layout"
            android:backgroundTint="#FFEBE6"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/reply_message_sender_name_receiver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/reply_text_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:maxLines="2"

                android:textColor="#212121"
                android:textSize="@dimen/fifteen"

                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/reply_image_layout_receiver"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/reply_image_receiver"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/reply_image_text_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoe"
                    android:textColor="#212121"

                    android:textSize="@dimen/fifteen"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reply_pdf_layout_receiver"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_rounded_grey_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/reply_pdf_image_receiver"
                    android:layout_width="@dimen/widget_size36"
                    android:layout_height="@dimen/widget_size36"
                    android:layout_gravity="start"
                    android:scaleType="centerCrop"
                    android:src="@drawable/documents" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reply_url_layout_receiver"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/reply_url_image_receiver"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="start"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/reply_url_title_receiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe"
                    android:maxLines="2"
                    android:textColor="#212121"
                    android:textSize="@dimen/fifteen"

                    android:visibility="gone" />

                <TextView
                    android:id="@+id/reply_url_text_receiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe"
                    android:textColor="#212121"
                    android:textSize="@dimen/fifteen"

                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/segoe"
            android:longClickable="true"
            android:text="receiver messages here"
            android:textAlignment="gravity"
            android:textColor="#212121"
            android:textIsSelectable="true"
            android:textSize="@dimen/fifteen"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_url_rec"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:visibility="gone"

            >

            <ImageView
                android:id="@+id/url_image_rec"
                android:layout_width="140dp"
                android:layout_height="101dp"
                android:layout_gravity="start"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title_of_url_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/segoe"
                android:maxLines="2"
                android:textColor="#212121"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc_of_url_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/url_text_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoe"
                android:textColor="#212121"
                android:textSize="@dimen/fifteen" />

            <TextView
                android:id="@+id/separate_url_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="@font/segoe"
                android:textColor="#212121"
                android:textColorLink="#1768E7"
                android:textSize="@dimen/fifteen" />
        </LinearLayout>


