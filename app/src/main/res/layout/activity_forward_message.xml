<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalChat.ForwardMessageActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groups_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margine_main"
        android:layout_marginEnd="@dimen/margine_main" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contacts_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groups_recycler_list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margine_main"
        android:layout_marginEnd="@dimen/margine_main" />

</RelativeLayout>