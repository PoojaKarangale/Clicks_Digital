<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsInSetting.ContactusFragmentReplacementActivity"
    android:orientation="vertical"
    android:background="#E8F0FD">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:background="@drawable/action_bar_start"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross"
            android:layout_marginTop="29dp"
            android:layout_gravity="end"
            android:layout_marginRight="14dp"
            android:onClick="finishAcivityContact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Get in Touch"
            android:layout_marginTop="18dp"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe"

            android:textColor="@color/white"
            android:text="Always within your reach"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/contact"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/set_profile_blue"
        android:layout_marginTop="31dp">
        <androidx.cardview.widget.CardView
            android:layout_width="31dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="#43B7FD"
            app:cardCornerRadius="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="6dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/friends"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            >
            <TextView
                android:id="@+id/txtVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Visit here "
                android:textSize="10dp"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:autoLink="web"
                android:text="@string/website_link"
                android:textSize="12dp"

                />

        </LinearLayout>
    </LinearLayout>






</LinearLayout>