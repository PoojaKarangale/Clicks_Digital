<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margine_main"
        android:layout_toStartOf="@+id/attach_file_btn"
        android:background="@drawable/flag_transparent"
        android:fontFamily="@font/lato"
        android:gravity="top|start"
        android:hint="Raise Discussion Topic Here.."
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLength="300"
        android:maxLines="10"
        android:minLines="4"
        android:padding="15dp"
        android:scrollbars="vertical"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="21dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="11dp"
            android:src="@drawable/ic_photo_size_select_actual_black_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/frag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="raise with an image"
            android:textStyle="bold"
            android:textColor="#8BB4F3"
            android:textAllCaps="true"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"

            />

    </LinearLayout>

</LinearLayout>

